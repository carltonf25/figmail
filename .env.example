# FigMail Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# Mailchimp Configuration (Choose ONE option)
# ============================================================================

# Option 1: OAuth2 (Recommended for Production)
# Get these from: https://developer.mailchimp.com/
MC_CLIENT_ID=your_mailchimp_client_id_here
MC_CLIENT_SECRET=your_mailchimp_client_secret_here
MC_REDIRECT_URI=http://localhost:4000/auth/mailchimp/callback

# Option 2: Static Token (Development Only)
# MC_ACCESS_TOKEN=your_mailchimp_access_token_here
# MC_DC=usXX

# ============================================================================
# Session Configuration (Required for OAuth)
# ============================================================================
SESSION_SECRET=your-super-secret-session-key-change-in-production-make-it-very-long-and-random

# ============================================================================
# AWS S3 Configuration (Choose ONE option)
# ============================================================================

# Option 1: Use AWS CLI credentials (Recommended for Development)
# Run: aws configure
# This will store credentials in ~/.aws/credentials
S3_BUCKET=figmail-assets-your-unique-suffix
S3_PREFIX=emails
AWS_REGION=us-east-1

# Option 2: Environment Variables (Alternative)
# AWS_ACCESS_KEY_ID=your_aws_access_key_id
# AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
# S3_BUCKET=figmail-assets-your-unique-suffix
# S3_PREFIX=emails
# AWS_REGION=us-east-1

# ============================================================================
# Email Configuration
# ============================================================================
DEFAULT_REPLY_TO=hello@yourdomain.com
DEFAULT_FROM_NAME=Your Company Name

# ============================================================================
# Server Configuration
# ============================================================================
PORT=4000
NODE_ENV=development

# ============================================================================
# Debug & Logging
# ============================================================================
DEBUG=true
DEBUG_LEVEL=info

# ============================================================================
# S3 Advanced Configuration (Optional)
# ============================================================================
# Maximum file size for uploads (in MB)
MAX_IMAGE_SIZE_MB=10

# Image optimization settings
IMAGE_QUALITY=85
MAX_IMAGE_WIDTH=1200
MAX_IMAGE_HEIGHT=1200

# S3 URL configuration (leave blank for default)
# CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net
# S3_CUSTOM_ENDPOINT=https://custom-s3-endpoint.com